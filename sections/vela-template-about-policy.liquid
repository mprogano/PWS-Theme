<div class="vigor-policy-about">
    {% if section.settings.title != blank %}
        <h3 class="velaHomeTitle">{{ section.settings.title }}</h3>
    {% endif %}
  	 {% if section.settings.desc_heading != blank %}
                <div class="decs-block text-center">{{ section.settings.desc_heading }}</div>
      {% endif %}
    <div class="velaContent flexBox-top flexBox-row">
           {% for block in section.blocks %}
           <div class="service-item-about colvigor text-center {{ section.settings.colvigor }}">
                <div class="service-box-about clearfix">
                    {% if block.settings.policyhome_icon1 != blank %}
                        <div class="icon-left"><i class="{{ block.settings.policyhome_icon1 }}"></i></div>
                    {% endif %}
                  <div class="service-about-heading">
                    <h4>{{ block.settings.heading }}</h4>
                    <span>{{ block.settings.desc }}</span> 
                  </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% schema %}
    {
        "name": "Vigor Policy",
		"max_blocks": 8,
        "settings":[
            {
                "type": "header",
                "content": "Text"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Title",
                "placeholder": "Title of section"
            },
            {
                "type": "text",
                "id": "desc_heading",
                "label": "Description",
 				"default": "vitae ultrices lacus purus vitae metus."
            },
			{
              "type": "select",
              "id": "colvigor",
              "label": "Policy per row",
              "default": "colvigor3",
              "options": [
				{
                  "value": "colvigor2",
                  "label": "2"
                },
                {
                  "value": "colvigor3",
                  "label": "3"
                },
                {
                  "value": "colvigor4",
                  "label": "4"
                },
                {
                  "value": "colvigor5",
                  "label": "5"
                }
              ]
            }
        ],
		"blocks": [
			{
                "type": "item",
                "name": "Policy Item",
                "settings": [
                    {
                      "type": "text",
                      "id": "policyhome_icon1",
                      "label": "Font Icon Class",
                      "info": "[Use font \"Material-Design-Iconic-Font\".](http://zavoloklom.github.io/material-design-iconic-font/icons.html)"
                    },
                    {
                        "type": "text",
                        "id": "heading",
                        "label": "service Heading"
                    },
					{
                        "type": "text",
                        "id": "desc",
                        "label": "Description Position"
                    }
                ]
            }
		]
    }
{% endschema %}