<div {% if section.settings.layout-full == 'full-width' %}class="full-width banner_full" {% else section.settings.layout-full == 'boxed'%}class="container"{% endif %}>
      {% if section.settings.title != blank %}   
        <h3 class="velaHomeTitle"><span>{{ section.settings.title }}</span></h3>
    {% endif %}	
    {% if section.settings.desc != blank %}
              <div class="decs-block">{{ section.settings.desc }}</div>
    {% endif %}
    <div {% if section.settings.no_padding == 'no_padding' %}class="Collection_list vigor-banner no_padding clearfix" {% else section.settings.no_padding == 'padding_default'%}class="Collection_list vigor-banner row"{% endif %}>
			{% for block in section.blocks %}
           <div class="col-sp-12 col-xs-{{ block.settings.colvigor_mobile }} col-sm-{{ block.settings.colvigor_mobile }} col-md-{{ block.settings.colvigor }}">
              <div class="lookbook-item">
                   {%- assign collection = collections[block.settings.collection] -%}
                   <a class="image-vigor banner_effect" href="{{ block.settings.link }}" title="{{ block.settings.heading }}" style="background-image:url({{ block.settings.image | img_url: '2000x' }});">
                        {% if block.settings.image != blank %}
                            <img class="img-responsive" alt="{{ block.settings.heading }}" src="{{ block.settings.image | img_url: '2000x' }}" />
                        {% else %}
                            <img class="img-responsive" alt="{{ shop.name }}" src="http://placehold.it/{{ block.settings.image_size }}" />
                        {% endif %}
                    </a>
                	<div class="boxMeta">
                        {% if block.settings.heading != blank %}
                            <h3 class="heding-lookbook"><a href="{{ block.settings.link }}" title="{{ block.settings.heading }}">{{ block.settings.heading }}</a></h3>
                        {% endif %}
                        <p class="boxMetaCount">{{ collection.products_count }} {{ block.settings.listcollection_txtcount }}</p>
                	</div>
              </div>
             {% if block.settings.image2 != blank %}
                  <div class="lookbook-item">
                       {%- assign collection = collections[block.settings.collection2] -%}
                       <a class="image-vigor banner_effect" href="{{ block.settings.link2 }}" title="{{ block.settings.heading2 }}" style="background-image:url({{ block.settings.image2 | img_url: '2000x' }});">
                            {% if block.settings.image2 != blank %}
                                <img class="img-responsive" alt="{{ block.settings.heading2 }}" src="{{ block.settings.image2 | img_url: '2000x' }}" />
                            {% else %}
                                <img class="img-responsive" alt="{{ shop.name }}" src="http://placehold.it/{{ block.settings.image_size2 }}" />
                            {% endif %}
                        </a>
                        <div class="boxMeta">
                            {% if block.settings.heading2 != blank %}
                                <h3 class="heding-lookbook"><a href="{{ block.settings.link2 }}" title="{{ block.settings.heading2 }}">{{ block.settings.heading2 }}</a></h3>
                            {% endif %}
                            <p class="boxMetaCount">{{ collection.products_count }} {{ block.settings.listcollection_txtcount2 }}</p>
                        </div>
                  </div>
             {% endif %}
               </div>
        {% endfor %}
    </div>
</div>
