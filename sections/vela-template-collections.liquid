{% if intProColumns == 5 %}
    {% capture strGridItem %}col-sp-12 col-md-2-4{% endcapture %}
{% else %}
    {% capture strGridItem %}col-sp-12 col-xs-6 col-md-{{ strColumn }}{% endcapture %}
{% endif %}
